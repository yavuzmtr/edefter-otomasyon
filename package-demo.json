{
  "name": "edefter-automation-demo",
  "private": true,
  "version": "1.0.1",
  "description": "E-Defter Klasör Otomasyonu - DEMO VERSİYON (5 Günlük Deneme)",
  "author": "YAVUZ MERCİMEK",
  "type": "module",
  "main": "electron/main-demo.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-win": "npm run build && electron-builder --win --x64",
    "dist-all": "npm run build && electron-builder --win --mac --linux",
    "pack": "npm run build && electron-builder --dir",
    "prepare-demo": "node build-demo.cjs",
    "build-demo": "npm run prepare-demo && npm run build && cross-env DEMO_VERSION=true electron-builder --config electron-builder-demo.yml --publish=never",
    "postinstall": "npx electron-builder install-app-deps",
    "uninstall-test": "powershell.exe -ExecutionPolicy Bypass -File scripts/smart-uninstaller.ps1 QUICK_UNINSTALL",
    "uninstall-full": "powershell.exe -ExecutionPolicy Bypass -File scripts/smart-uninstaller.ps1 FULL_CLEANUP",
    "uninstall-dialog": "powershell.exe -ExecutionPolicy Bypass -File scripts/smart-uninstaller.ps1"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "auto-launch": "^5.0.6",
    "chokidar": "^3.5.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.344.0",
    "nodemailer": "^7.0.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^38.2.2",
    "electron-builder": "^24.9.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "js-yaml": "^4.1.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.edefter.automation",
    "productName": "E-Defter Otomasyon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "**/*.ps1"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "E-Defter Otomasyon",
      "runAfterFinish": true,
      "uninstallDisplayName": "E-Defter Otomasyon Sistemi",
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "perMachine": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}